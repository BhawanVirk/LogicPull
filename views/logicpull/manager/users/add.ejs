<div id="admin">

	<% include ../header %>

	<div class="contents-container">
		<div class="contents">
			<div class="title"><h1>Add a New User</h1></div>
			<div class="clear"></div>
			<div class="side">
				<h2>Help</h2>
				<p>If a user is already registered, submitting this form will <strong>overwrite</strong> their account information.</p>
			</div>

			<div class="wide">
				<% if (msg) { %>
					<div class="error">
						<%- msg %>
					</div>
				<% } %>
				<form method="post" action="">
					<input type="hidden" name="_csrf" value="<%= token %>"/>
					<table class="add-table table">
						<tbody class="b">
				            <tr>
				            	<td>
				            		<div class="label">Email:</div>
				            		<input type="text" name="email" class="ab">

				            	</td>
				            </tr>
				            <tr>
				            	<td>
				            		<div class="label">Privledges:</div>
				            		<div>
				            			<table class="users-table">
				            				<tr>
				            					<td colspan="2"><strong>Interviews</strong><br><br></td>
				            				</tr>
				            				<tr>
				            					<td>Add a new interview </td>
				            					<td><input name="add_interview" type="checkbox" checked="checked" /></td>
				            				</tr>
				            				<tr>
				            					<td>Remove an interview</td>
				            					<td><input name="remove_interview" type="checkbox" /></td>
				            				</tr>			            				
				            				<tr>
				            					<td>Clone an interview 
													<div class="nfo-con">
														<div class="display">?</div>
														<div class="body">This will copy an interview and all its deliverables.</div>
													</div>
				            					</td>
				            					<td><input name="clone_interview" type="checkbox" checked="checked" /></td>
				            				</tr>
				            				<tr>
				            					<td>Edit Interviews
													<div class="nfo-con">
														<div class="display">?</div>
														<div class="body">This will restrict access to the interview page, except to the creator of the interview.</div>
													</div>
												</td>
				            					<td><input name="edit_interviews" type="checkbox" checked="checked" /></td>
				            				</tr>
				            				<tr>
				            					<td>Change the status of an interview
													<div class="nfo-con">
														<div class="display">?</div>
														<div class="body">The status of an interview refers to whehter is is available for the public to see or not.</div>
													</div>
				            					</td>
				            					<td><input name="change_interview_status" type="checkbox" /></td>
				            				</tr>
				            				<tr>
				            					<td>Lock or unlock an interview</td>
				            					<td><input name="lock_interview" type="checkbox" /></td>
				            				</tr>
				            				<tr>
				            					<td>View interview report
													<div class="nfo-con">
														<div class="display">?</div>
														<div class="body">Locking an interview prevents anyone, except its creator from making changes to it.</div>
													</div>
				            					</td>
				            					<td><input name="view_report" type="checkbox" checked="checked" /></td>
				            				</tr>
				            				<tr>
				            					<td>Edit the on complete settings</td>
				            					<td><input name="edit_on_complete" type="checkbox" /></td>
				            				</tr>
				            				<tr><td colspan="2">&nbsp;</td></tr>
				            				<tr>
				            					<td colspan="2"><strong>Editor</strong><br><br></td>
				            				</tr>
				            				<tr>
				            					<td>Save edits made to an interview</td>
				            					<td><input name="editor_save" type="checkbox" checked="checked" /></td>
				            				</tr>
				            				<tr><td colspan="2">&nbsp;</td></tr>
				            				<tr>
				            					<td colspan="2"><strong>Users</strong><br><br></td>
				            				</tr>            				
				            				<tr>
				            					<td>Edit a user</td>
				            					<td><input name="edit_user" type="checkbox" /></td>
				            				</tr>
				            				<tr>
				            					<td>Change a users privledges</td>
				            					<td><input name="edit_privledges" type="checkbox" /></td>
				            				</tr>
				            				<tr>
				            					<td>View users</td>
				            					<td><input name="view_users" type="checkbox" /></td>
				            				</tr>
				            				<tr><td colspan="2">&nbsp;</td></tr>
				            				<tr>
				            					<td colspan="2"><strong>Deliverables</strong><br><br></td>
				            				</tr>
				            				<tr>
				            					<td>Add a deliverable</td>
				            					<td><input name="add_deliverable" type="checkbox" checked="checked" /></td>
				            				</tr>
				            				<tr>
				            					<td>Remove a deliverable</td>
				            					<td><input name="remove_deliverable" type="checkbox" /></td>
				            				</tr>			            				
				            				<tr>
				            					<td>Update a deliverable</td>
				            					<td><input name="update_deliverable" type="checkbox" checked="checked" /></td>
				            				</tr>
				            				<tr>
				            					<td>Download a deliverable</td>
				            					<td><input name="download_deliverable" type="checkbox" checked="checked" /></td>
				            				</tr>
				            				<tr>
				            					<td>Download style sheet</td>
				            					<td><input name="download_stylesheet" type="checkbox" checked="checked" /></td>
				            				</tr>
				            				<tr><td colspan="2">&nbsp;</td></tr>
				            				<tr>
				            					<td colspan="2"><strong>Misc</strong><br><br></td>
				            				</tr>
				            				<tr>
				            					<td>View completed interviews
													<div class="nfo-con">
														<div class="display">?</div>
														<div class="body">The completed interviews, as done by the clients. This included the processed deliverables, along with the answer set.</div>
													</div>
				            					</td>
				            					<td><input name="view_completed_interviews" type="checkbox" /></td>
				            				</tr>
				            				<tr>
				            					<td>Download style sheet</td>
				            					<td><input name="download_answer_set" type="checkbox" checked="checked" /></td>
				            				</tr>
				            			</table>
				            		</div>
				            	</td>
				            </tr>
						</tbody>
					</table>

					<div class="clear"></div>
					<input type="submit" value="Add New User" class="right"/>
					<a class="confirm right" href="/manager/users"><span>Cancel, and go Back</span></a>
					<br>
				</form>

				<div class="clear"></div>
			</div>
			<div class="clear"></div>
		</div>
	</div>
	<div class="clear"></div>
	<% include ../footer %>
</div>